; $Id$

/* The main wrapper for all sticky notes */
#sticky-notes-wrapper
{
  position: absolute;
  top: 0px;
  left: 0px;
}

/* Wrapper for an individual sticky note */
div.sticky-notes-note-item-wrapper
{
  position: absolute;
  padding: 0px;
  margin: 0px;
  width: 150px;
  height: 150px;
}

/* An individual sticky note */
div.sticky-notes-note-item
{
  background-color: #FDFB8C;
  height: 150px;
  width: 150px;
  padding: 0px;
  margin: 0px;
  overflow: hidden;
  cursor: move;
  font-family: "Trebuchet MS", Tahoma, "Myriad Pro", Arial, Verdana,sans-serif;
  font-size: 14px;
  border:1px solid #DEDC65;
  /* Adding a CSS3 shadow below the note, in the browsers which support it: */
  -moz-box-shadow: 2px 2px 0 #DDDDDD;
  -webkit-box-shadow: 2px 2px 0 #DDDDDD;
  box-shadow: 2px 2px 0 #DDDDDD;
}

/* The container for the node nid */
span.sticky-note-nid
{
  display: none;
}

/* The notes body text */
div.sticky-notes-note-item-body
{
  height: 125px;
  padding: 5px;
  font-size: 14px;
}

div.sticky-notes-note-item-body p
{
  padding-top: 0px;
  margin-top: 0px;
}

/* Wrapper for the notes action links */
div.sticky-notes-note-item-actions-wrapper
{
  position: relative;
  text-align: right;
}

div.sticky-notes-note-item-actions
{
  position: absolute;
  top: 0px;
  right: 0px;
  padding: 1px;
  margin: 0px;
  font-size: 9px;
  background-color: white;
  border: 1px solid lightgray;
  display: none;
  overflow: hidden;
}

div.sticky-notes-note-item-wrapper:hover div.sticky-notes-note-item-actions
{
  display: inline;
  padding: 0px;
  margin: 0px;
}

div.sticky-notes-note-item-actions a
{
  font-size: 9px;
  padding: 0px;
  margin: 0px;
}

div.sticky-notes-note-item-actions a.popups-processed,
div.sticky-notes-note-item-actions a.popups-processed:after
{
  background: none;
  content: '';
}

div.sticky-notes-note-item-author
{
  float: right;
  font-size: 12px;
  width: 100px;
}

/* The add button */
div#sticky-notes-add-note-button-wrapper
{
  position: relative;
}

div#sticky-notes-add-note-button
{
  position: fixed;
  bottom: 0px;
  right: 0px;
  padding: 3px 5px;
  margin: 0px;
  background-color: lightgray;
  z-index: 6;
}

div#sticky-notes-add-note-button a
{
  text-decoration: none;
  font-family: verdana;
  font-weight: normal;
  font-size: 16px;
  color: black;
}

/* try to style the node edit popup */
.popups-box
{
/*  width: 500px !important;*/
}

.popups-body #sticky-notes-form .node-form
{
  height: 150px;
}

.popups-body #sticky-notes-form textarea#edit-body
{
  background-color: #FDFB8C;
  height: 150px;
  width: 150px;
  max-height: 150px;
  max-width: 150px;
  padding: 0px;
  margin: 0px 10px 0px 0px;
  overflow: hidden;
  font-family: "Trebuchet MS", Tahoma, "Myriad Pro", Arial, Verdana,sans-serif;
  font-size: 14px;
  border:1px solid #DEDC65;
  /* Adding a CSS3 shadow below the note, in the browsers which support it: */
  -moz-box-shadow: 2px 2px 0 #DDDDDD;
  -webkit-box-shadow: 2px 2px 0 #DDDDDD;
  box-shadow: 2px 2px 0 #DDDDDD;
}

.popups-body #sticky-notes-form #edit-body-wrapper label
{
  display: none;
}

.popups-body #sticky-notes-form .form-item,
.popups-body #sticky-notes-form .admin
{
  font-size: 12px;
  margin: 0px;
  padding: 0px;
}

.popups-body #sticky-notes-form .node-form .standard
{
  height: 130px;
}

.popups-body #sticky-notes-form .body-field-wrapper
{
  float: left;
}

.popups-body #sticky-notes-form .sticky-notes-edit-form-additional
{
  float: right;
  width: 150px;
}

.popups-body #sticky-notes-form .node-form .sticky-notes-form-buttons
{
  float: right;
}

/* disable some other stuff, like notifications */
.popups-body #sticky-notes-form .node-form .standard fieldset
{
  display: none;
}
